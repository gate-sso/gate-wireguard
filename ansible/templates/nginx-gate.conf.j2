upstream gate_app {
  server 127.0.0.1:{{ puma_port }};
}

server {
  listen 80;
  server_name {{ domain }};

  root {{ app_dir }}/public;

  access_log /var/log/nginx/gate-wireguard.access.log;
  error_log /var/log/nginx/gate-wireguard.error.log;

  location @gate_app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://gate_app;
  }

  location / {
    try_files $uri/index.html $uri @gate_app;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
