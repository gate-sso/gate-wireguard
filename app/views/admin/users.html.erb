<div class="page-header">
  <div>
    <h3>Users</h3>
    <div class="page-header-subtitle"><%= @users.count %> registered users</div>
  </div>
</div>

<div class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Add User</h5>
    <p class="card-text text-muted small">Pre-authorize a user by email. Only pre-authorized users can log in via Google OAuth.</p>
    <%= form_with url: add_user_path, method: :post, class: 'd-flex gap-2' do |f| %>
      <%= f.email_field :email, placeholder: 'user@example.com', class: 'form-control', required: true, style: 'max-width: 350px;' %>
      <%= f.submit 'Add User', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Role</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="d-flex align-items-center gap-2">
              <% if user.profile_picture_url.present? %>
                <img src="<%= user.profile_picture_url %>" alt="" class="rounded-circle" width="28" height="28" style="object-fit: cover;">
              <% end %>
              <%= user.name || 'Pending' %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.provider.blank? %>
                <span class="badge bg-warning text-dark">Pending</span>
              <% elsif user == current_user %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <%= button_to toggle_active_path(user), method: :patch, class: 'd-inline' do %>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" <%= 'checked' if user.active? %> onclick="this.closest('form').requestSubmit()" style="pointer-events: none;">
                  </div>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if user == current_user %>
                <span class="badge bg-primary">Admin</span>
              <% elsif user.provider.present? %>
                <%= button_to toggle_admin_path(user), method: :patch, class: 'd-inline' do %>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" <%= 'checked' if user.admin? %> onclick="this.closest('form').requestSubmit()" style="pointer-events: none;">
                  </div>
                <% end %>
              <% end %>
            </td>
            <td>
              <% unless user == current_user %>
                <%= button_to destroy_user_path(user), method: :delete, class: 'btn btn-sm btn-outline-danger', data: { turbo_confirm: "Remove #{user.email}?" } do %>
                  Remove
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
