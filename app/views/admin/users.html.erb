<table class="table table-striped table-dynamic">
    <thead class="thead-dynamic">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Admin</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" <%= 'checked' if user.admin? %>
                        <%= 'disabled' if current_user == user %>>
                    </div>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>