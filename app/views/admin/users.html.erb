<div class="page-header">
  <div>
    <h3>Users</h3>
    <div class="page-header-subtitle"><%= @users.count %> registered users</div>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="d-flex align-items-center gap-2">
              <% if user.profile_picture_url.present? %>
                <img src="<%= user.profile_picture_url %>" alt="" class="rounded-circle" width="28" height="28" style="object-fit: cover;">
              <% end %>
              <%= user.name %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user == current_user %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <%= button_to toggle_active_path(user), method: :patch, class: 'd-inline' do %>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" <%= 'checked' if user.active? %> onclick="this.closest('form').requestSubmit()" style="pointer-events: none;">
                  </div>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if user == current_user %>
                <span class="badge bg-primary">Admin</span>
              <% else %>
                <%= button_to toggle_admin_path(user), method: :patch, class: 'd-inline' do %>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" <%= 'checked' if user.admin? %> onclick="this.closest('form').requestSubmit()" style="pointer-events: none;">
                  </div>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
