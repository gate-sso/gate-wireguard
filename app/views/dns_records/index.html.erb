<div class="page-header">
  <div>
    <h3>DNS Records</h3>
    <div class="page-header-subtitle">Zone: <%= ENV['GATE_DNS_ZONE'] %></div>
  </div>
  <a href="/dns_records/refresh" class="btn btn-outline-primary btn-sm">
    <i class="bi bi-arrow-clockwise"></i> Refresh Zone
  </a>
</div>

<div class="card mb-4">
  <div class="card-header"><h5 class="mb-0">Add Record</h5></div>
  <div class="card-body">
    <%= form_with model: @dns_record do |form| %>
      <div class="row g-2 align-items-end">
        <div class="col-md-4">
          <label class="form-label" for="host_name">Host Name</label>
          <%= form.text_field :host_name, id: "host_name", class: "form-control", placeholder: "hostname" %>
        </div>
        <div class="col-md-4">
          <label class="form-label" for="ip_address">IP Address</label>
          <%= form.text_field :ip_address, id: "ip_address", class: "form-control", placeholder: "10.0.0.1" %>
        </div>
        <div class="col-md-4">
          <%= form.submit "Add Record", class: "btn btn-primary w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th>Host Name</th>
          <th>IP Address</th>
          <th>User</th>
          <th class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @dns_records.each do |dns_record| %>
          <tr>
            <td><code><%= dns_record.host_name %>.<%= ENV['GATE_DNS_ZONE'] %></code></td>
            <td><code><%= dns_record.ip_address %></code></td>
            <td><%= dns_record.user.name %></td>
            <td class="text-end">
              <%= link_to dns_record, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' do %>
                <i class="bi bi-trash3"></i> Delete
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
