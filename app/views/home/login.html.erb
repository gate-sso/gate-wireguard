<div class="login-container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg enterprise-card" style="width: 480px; border: none; border-radius: 16px; overflow: hidden;">
    <div class="card-body p-5 text-center">
      
      <!-- Professional Header -->
      <div class="mb-5">
        <div class="logo-container mb-4">
          <div class="company-logo mb-3">
            <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3.5rem;"></i>
          </div>
          <h1 class="h2 fw-bold text-dark mb-2">Gate VPN</h1>
          <p class="text-muted mb-0" style="font-size: 1.1rem;">
            Enterprise Secure Network Access
          </p>
        </div>
        
        <div class="welcome-message">
          <h3 class="h5 text-dark mb-2">Welcome Back</h3>
          <p class="text-muted mb-0">
            Sign in to access your secure network environment
          </p>
        </div>
      </div>
      
      <% if flash[:alert] %>
        <div class="alert alert-warning mb-3" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <!-- Professional Separator -->
      <div class="separator-line my-4"></div>
      
      <!-- Google Sign In Button -->
      <div class="d-grid mb-4">
        <a href="/auth/google_oauth2" 
           class="btn btn-enterprise btn-lg d-flex align-items-center justify-content-center gap-3 py-3 px-4"
           style="border-radius: 12px;">
          
          <!-- Google Logo SVG -->
          <svg width="20" height="20" viewBox="0 0 24 24" class="google-logo">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          
          <span class="fw-medium">Continue with Google</span>
        </a>
      </div>
      
      <!-- Security Information -->
      <div class="security-info mb-4">
        <div class="d-flex align-items-center justify-content-center gap-3 mb-3">
          <div class="security-badge">
            <i class="bi bi-shield-check text-success me-1"></i>
            <small class="text-muted">SSO Enabled</small>
          </div>
          <div class="security-badge">
            <i class="bi bi-lock-fill text-primary me-1"></i>
            <small class="text-muted">OAuth 2.0</small>
          </div>
          <div class="security-badge">
            <i class="bi bi-check-circle-fill text-success me-1"></i>
            <small class="text-muted">Secure</small>
          </div>
        </div>
      </div>
      
      <!-- Professional Footer -->
      <div class="footer-info">
        <div class="d-flex align-items-center justify-content-center gap-2 mb-2">
          <small class="text-muted">Powered by</small>
          <strong class="text-primary">WireGuardÂ®</strong>
          <small class="text-muted">Protocol</small>
        </div>
        <small class="text-muted d-block">
          Enterprise-grade VPN solution for secure remote access
        </small>
      </div>
    </div>
  </div>
</div>

