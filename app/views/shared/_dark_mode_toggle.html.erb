<!-- Dark Mode Toggle Button -->
<button 
  data-dark-mode-target="toggle" 
  data-action="click->dark-mode#toggle"
  class="btn btn-outline-secondary ms-2"
  type="button"
  title="Toggle dark mode"
  style="border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
  <i data-dark-mode-target="icon" class="bi bi-moon-fill"></i>
</button>
