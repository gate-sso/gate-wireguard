<nav class="navbar navbar-expand-md fixed-top">
  <div class="container-sm">
    <a class="navbar-brand" href="/">
      <i class="bi bi-shield-lock-fill me-2"></i>GATE
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <% if current_user&.admin? %>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2 <%= 'active' if request.path == '/admin/users' %>" href="/admin/users">
              <i class="bi bi-people-fill"></i><span>Users</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2 <%= 'active' if request.path == '/vpn_devices' && !params[:nodes] %>" href="/vpn_devices">
              <i class="bi bi-router-fill"></i><span>Devices</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2 <%= 'active' if params[:nodes] %>" href="/vpn_devices?nodes=true">
              <i class="bi bi-diagram-3-fill"></i><span>Nodes</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2 <%= 'active' if request.path == '/admin/vpn_configurations' %>" href="/admin/vpn_configurations">
              <i class="bi bi-gear-fill"></i><span>Configuration</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2 <%= 'active' if request.path.start_with?('/admin/backups') %>" href="/admin/backups">
              <i class="bi bi-shield-check"></i><span>Backup</span>
            </a>
          </li>
        <% elsif current_user %>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2 <%= 'active' if request.path == '/my_devices' %>" href="/my_devices">
              <i class="bi bi-router"></i><span>My Devices</span>
            </a>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" href="/login">
              <i class="bi bi-box-arrow-in-right"></i><span>Login</span>
            </a>
          </li>
        <% end %>
      </ul>

      <div class="ms-auto d-flex align-items-center gap-2">
        <% if current_user %>
          <div class="dropdown">
            <button class="btn btn-link dropdown-toggle d-flex align-items-center gap-2 p-1 text-decoration-none border-0"
                    type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <div class="rounded-circle overflow-hidden" style="width: 32px; height: 32px;">
                <% if current_user.profile_picture_url.present? %>
                  <img src="<%= profile_image_path %>" alt="<%= current_user.name || current_user.email %>"
                       class="w-100 h-100" style="object-fit: cover;">
                <% else %>
                  <div class="bg-primary text-white d-flex align-items-center justify-content-center w-100 h-100" style="font-size: 0.8rem;">
                    <%= (current_user.name || current_user.email).first.upcase %>
                  </div>
                <% end %>
              </div>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
              <li>
                <h6 class="dropdown-header">
                  <div class="d-flex flex-column">
                    <span><%= current_user.name || current_user.email %></span>
                    <% if current_user.admin? %>
                      <small class="text-primary"><i class="bi bi-shield-fill-check"></i> Administrator</small>
                    <% else %>
                      <small class="text-muted">User</small>
                    <% end %>
                  </div>
                </h6>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item" href="/my_devices">
                  <i class="bi bi-router me-2"></i>My Devices
                </a>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item text-danger" href="/logout" data-turbo="false">
                  <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>
              </li>
            </ul>
          </div>
        <% end %>

        <%= render 'shared/dark_mode_toggle' %>
      </div>
    </div>
  </div>
</nav>
