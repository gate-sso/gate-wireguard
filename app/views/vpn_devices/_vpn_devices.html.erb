<% vpn_devices_require_updates = vpn_devices.select { |d| d.description.blank? } %>

<% if vpn_devices_require_updates.any? %>
  <div class="p-3">
    <div class="alert alert-warning mb-3">
      <i class="bi bi-exclamation-triangle me-2"></i>
      Please add a description to the following device(s). Devices without a description cannot have configurations.
    </div>
    <% vpn_devices_require_updates.each do |vpn_device| %>
      <%= form_with model: vpn_device, class: "mb-3" do |form| %>
        <div class="row g-2 align-items-center">
          <div class="col-md-4">
            <%= form.text_field :description, class: "form-control", placeholder: "Device Description" %>
          </div>
          <div class="col-md-3">
            <%= form.text_field :private_key, class: "form-control font-mono", disabled: true, placeholder: "Private Key" %>
          </div>
          <div class="col-md-2">
            <% if @current_user.admin %>
              <div class="form-check">
                <%= form.check_box(:node, class: "form-check-input") %>
                <label class="form-check-label">Infra node?</label>
              </div>
            <% end %>
          </div>
          <div class="col-md-3 d-flex gap-2">
            <%= form.submit "Update", class: "btn btn-primary btn-sm" %>
            <%= link_to vpn_device, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" do %>
              Remove
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<% if vpn_devices_require_updates.empty? %>
  <div class="p-3">
    <%= link_to new_vpn_device_path, data: { turbo: false }, class: "btn btn-primary btn-sm" do %>
      <i class="bi bi-plus-lg"></i> Add a VPN Device
    <% end %>
  </div>
<% end %>

<% vpn_devices.each do |vpn_device| %>
  <% if vpn_device.description? %>
    <div class="card mb-3 mx-3">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span><%= vpn_device.description %><% if vpn_device.node %> <span class="badge bg-secondary">Node</span><% end %></span>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <div class="config-row">
              <div class="config-label"><i class="bi bi-server text-primary"></i> VPN Server IP</div>
              <div class="config-value"><code><%= @vpn_configuration.wg_ip_address %></code></div>
            </div>
            <div class="config-row">
              <div class="config-label"><i class="bi bi-key-fill text-warning"></i> Private Key</div>
              <div class="config-value"><code class="font-mono" style="font-size: 0.75rem; word-break: break-all;"><%= vpn_device.private_key %></code></div>
            </div>
            <div class="config-row">
              <div class="config-label"><i class="bi bi-shield-check text-success"></i> Public Key</div>
              <div class="config-value"><code class="font-mono" style="font-size: 0.75rem; word-break: break-all;"><%= vpn_device.public_key %></code></div>
            </div>
            <div class="config-row">
              <div class="config-label"><i class="bi bi-router-fill text-info"></i> Device IP</div>
              <div class="config-value"><code><%= vpn_device.ip_allocation.ip_address %></code></div>
            </div>
            <div class="config-row">
              <div class="config-label"><i class="bi bi-diagram-3 text-secondary"></i> Networks</div>
              <div class="config-value"><%= @vpn_configuration.network_addresses.map(&:network_address).join(", ") %></div>
            </div>

            <div class="mt-3 d-flex gap-2">
              <%= link_to download_config_path(vpn_device.id), class: "btn btn-primary btn-sm" do %>
                <i class="bi bi-download"></i> Download
              <% end %>
              <% unless vpn_device.node %>
                <%= link_to vpn_device, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" do %>
                  <i class="bi bi-trash3"></i> Remove
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-md-4 text-center py-2">
            <div class="qr-container">
              <%= raw vpn_device.generate_qr_code %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
