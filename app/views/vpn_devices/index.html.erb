<div class="page-header">
  <div>
    <% if @user_devices_only %>
      <h3>My Devices</h3>
      <div class="page-header-subtitle">Your personal VPN devices</div>
    <% else %>
      <h3>VPN Devices <%= @nodes ? "(Nodes)" : "(All)" %></h3>
      <div class="page-header-subtitle"><%= @vpn_devices.count %> devices</div>
    <% end %>
  </div>
  <% if @user_devices_only && @vpn_devices.any? %>
    <%= link_to new_vpn_device_path, class: 'btn btn-primary btn-sm' do %>
      <i class="bi bi-plus-lg"></i> Add Device
    <% end %>
  <% end %>
</div>

<div class="card">
  <% if @vpn_devices.any? %>
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <% unless @user_devices_only %>
              <th>User</th>
            <% end %>
            <th>Description</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @vpn_devices.each do |vpn_device| %>
            <tr>
              <% unless @user_devices_only %>
                <td><%= vpn_device.user.name %></td>
              <% end %>
              <td><%= vpn_device.description %></td>
              <td class="text-end">
                <% if @user_devices_only || current_user&.admin? %>
                  <div class="d-flex gap-2 justify-content-end">
                    <%= link_to vpn_device, class: 'btn btn-outline-primary btn-sm' do %>
                      <i class="bi bi-eye"></i> View
                    <% end %>
                    <%= link_to vpn_device, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' do %>
                      <i class="bi bi-trash3"></i> Remove
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-muted">View only</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <i class="bi bi-router"></i>
      <h5>
        <% if @user_devices_only %>
          No VPN devices found
        <% else %>
          No devices in the system
        <% end %>
      </h5>
      <p>
        <% if @user_devices_only %>
          You haven't created any VPN devices yet. Create your first device to get started.
        <% else %>
          No VPN devices have been created in the system yet.
        <% end %>
      </p>
      <% if @user_devices_only %>
        <%= link_to new_vpn_device_path, class: 'btn btn-primary' do %>
          <i class="bi bi-plus-lg"></i> Create Your First Device
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
